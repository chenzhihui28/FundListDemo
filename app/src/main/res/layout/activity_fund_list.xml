                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="hehe"/>

                            <Button
                                android:id="@+id/btn_7_2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="hehe"/>

                            <Button
                                android:id="@+id/btn_8_2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="hehe"/>
                        </LinearLayout>

                    </com.szl.fundlistdemo.MyHorizontalScrollView>
                </LinearLayout>

                <com.szl.fundlistdemo.ObservableScrollView
                    android:id="@+id/main_scrollview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.szl.fundlistdemo.WrapContentListView
                            android:id="@+id/left_lv2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"/>

                        <com.szl.fundlistdemo.MyHorizontalScrollView
                            android:id="@+id/hscrollview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.szl.fundlistdemo.WrapContentListView
                                android:id="@+id/right_lv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </com.szl.fundlistdemo.MyHorizontalScrollView>
                    </LinearLayout>


                </com.szl.fundlistdemo.ObservableScrollView>


            </LinearLayout>
        </com.szl.fundlistdemo.ObservableScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


